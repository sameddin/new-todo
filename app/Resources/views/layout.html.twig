{% extends 'base.html.twig' %}

{% block stylesheets %}
    {% stylesheets '@css' %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
        <script src="https://use.fontawesome.com/1fd1821b57.js"></script>
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {% javascripts '@js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('homepage') }}">New ToDo</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <form class="navbar-form navbar-right">
                    <div class="form-group">
                        <input type="text" placeholder="Email" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="password" placeholder="Password" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-success">Sign in</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="jumbotron">
        <div class="container">
            <h1>Hello, world!</h1>
            <p>This is awesome New ToDo list.<br>
                If you want your own tasks, just tap on the button below and register for free.
            </p>
            <p><a class="btn btn-primary btn-lg" href="#" role="button">Register <i class="fa fa-angle-double-right" aria-hidden="true"></i> </a></p>
        </div>
    </div>

    <div class="container">
        {% block content %}{% endblock %}

        <hr>

        <footer>
            <p><i class="fa fa-copyright" aria-hidden="true"></i> {{ "now"|date('Y') }}  New ToDo. Created & Designed by <a href="http://sameddin.pro/" target="_blank">Sameddin</a>.</p>
        </footer>
    </div>
{% endblock %}

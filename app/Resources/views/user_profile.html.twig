{% block stylesheets %}
    {% stylesheets '@css' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    <script src="https://use.fontawesome.com/1fd1821b57.js"></script>
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {% javascripts '@js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block content %}
    <nav class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('homepage') }}">{{ 'common.project_name'|trans }}</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                           aria-haspopup="true" aria-expanded="false">
                            <img height="20" width="20" src="{{ gravatar(app.user.email) }}">
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-header">
                                    <span class="dropdown-menu-homepage">
                                        {{ 'common.signed_in_as'|trans }} <strong>{{ app.user.nickName }}</strong>
                                    </span>
                            </li>
                            <li role="separator" class="divider"></li>
                            <li><a class="dropdown" href="{{ path('user_profile', {id: app.user.id }) }}">{{ 'common.your_profile'|trans }}</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a class="dropdown" href="#">{{ 'common.settings'|trans }}</a></li>
                            <li>
                                <a class="dropdown" href="{{ logout_url('main') }}">
                                    {{ 'common.sign_out'|trans }}
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <body class="body-profile">
        <div class="container">
            <div class="row profile">
                <div class="col-md-3">
                    <div class="profile-sidebar">
                        <div class="profile-userpic">
                            <img src="{{ gravatar(user.email, 230) }}" class="img-responsive img-rounded">
                        </div>
                        <div class="profile-usertitle">
                            <div class="profile-usertitle-name">
                                {{ user.nickname }}
                            </div>
                        </div>
                        <div class="profile-userbuttons">
                            <button type="button" class="btn btn-success btn-sm">
                                {{ 'common.edit_profile'|trans }}
                            </button>
                        </div>
                        <div class="profile-usermenu">
                            <ul class="nav">
                                <li class="active">
                                    <a href="{{ path('user_profile', {id: app.user.id }) }}">
                                        <i class="fa fa-home" aria-hidden="true"></i> {{ 'common.overview'|trans }}
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown" href="{{ logout_url('main') }}">
                                        <i class="fa fa-sign-out" aria-hidden="true"></i> {{ 'common.sign_out'|trans }}
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="profile-content">
                        <p>Some user related content goes here...</p>
                        <p>User's task list will be here...</p>
                    </div>
                </div>
            </div>
        </div>
    </body>

    <div class="container">
        <footer>
            <p class="text-center"><i class="fa fa-copyright" aria-hidden="true"></i> {{ "now"|date('Y') }} {{ 'common.project_name'|trans }} <br>
                {{ 'common.created_designed'|trans }} <a href="http://sameddin.pro/" target="_blank">{{ 'awesome.programmer'|trans }}</a></p>
        </footer>
    </div>
{% endblock %}
